# Git helpers
alias gittips='cat ~/.gittips'
alias cb='git symbolic-ref --short HEAD 2>/dev/null || git rev-parse --short HEAD'
alias rm-merged='git branch --merged | egrep -v "(^\*|master|main|dev)" | xargs -r git branch -d'
alias duh='du -sh * | sort -h'
